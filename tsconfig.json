{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["es6", "dom", "es2017"],
		"module": "commonjs",

		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,

		"outDir": "./dist",
		"rootDir": "./src",

		"baseUrl": "./src",

		"paths": {
			"@/*": ["./*"],
			"@types/*": ["./types/*"],
			"@routes/*": ["./routes/*"],
			"@recipes/*": ["./recipes/*"],
			"@database/*": ["./database/*"],
		},
	},
}
